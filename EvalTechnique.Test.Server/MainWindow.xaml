<Window x:Class="EvalTechnique.Test.Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EvalTechnique.Test.Server"
        mc:Ignorable="d"
        Title="ServerCommand" Height="175" Width="325" ResizeMode="NoResize">
    <StackPanel>

        <TextBlock x:Name="txtServerState" Margin="10" Text="SERVER OFF" HorizontalAlignment="Center" />

        <ProgressBar x:Name="pbLoadingSate" Margin="10" Height="10" Visibility="Hidden" IsIndeterminate="True" />
        
        <Button x:Name="btnRunServer"
                Content="Démarrer le serveur"
                Margin="10" Padding="10" Width="200"
                HorizontalAlignment="Center"
                Click="btnRunServer_Click"/>

    </StackPanel>
</Window>
